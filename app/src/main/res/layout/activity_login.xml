<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pagelgn"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".login">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFDFD"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/cd1"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="319dp"
            app:cardCornerRadius="45dp">
            <ImageView
                android:id="@+id/gogle"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/google"></ImageView>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/cd2"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="259dp"
            app:cardCornerRadius="45dp">
            <ImageView
                android:id="@+id/fb"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/facebook"></ImageView>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/cd3"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="220dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="22dp"
            android:layout_marginBottom="200dp"
            app:cardCornerRadius="45dp">
            <ImageView
                android:id="@+id/twiter"
                android:layout_width="24dp"
                android:layout_height="32dp"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:src="@drawable/twiter"></ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/SIGNUP"
            android:layout_width="140dp"
            android:layout_height="40dp"
            android:layout_marginStart="17dp"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="610dp"
            android:fontFamily="@font/segoeprb"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="SIGNUP"
            android:textColor="#F57C00"
            android:textSize="19sp"
            android:textStyle="bold">
        </TextView>
        <androidx.cardview.widget.CardView
            android:layout_width="250dp"
            android:layout_height="459dp"
            android:id="@+id/card1"
            android:layout_marginLeft="-25dp"
            android:layout_marginTop="130dp"
            app:cardBackgroundColor="#f6941e"
            app:cardCornerRadius="30dp">
            <TextView
                android:id="@+id/login_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:text="login"
                android:fontFamily="@font/segoeprb"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textSize="30sp"
                />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="265dp"
            android:layout_height="360dp"
            android:id="@+id/box1"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="200dp"
            app:cardBackgroundColor="#F5D8D4D4"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="73dp"
                android:layout_height="61dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/user1" />
            <EditText
                android:id="@+id/login_email"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="100dp"
                android:drawableLeft="@drawable/email1"
                android:drawablePadding="20dp"
                android:hint="@string/email"
                android:padding="5dp" />
            <EditText
                android:id="@+id/login_pass"
                android:layout_width="250dp"
                android:layout_height="55dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="160dp"
                android:drawableLeft="@drawable/ic_baseline_lock_24"
                android:drawablePadding="20dp"
                android:hint="password"
                android:inputType="textPassword"
                android:padding="7dp" />
            <TextView
                android:id="@+id/tvforgotdoctor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="210dp"
                android:text="forget password?"
                android:textColor="#F57C00"
                android:textSize="15sp" />
            <Button
                android:id="@+id/btn_login"
                android:layout_width="200dp"
                android:layout_height="49dp"
                android:layout_marginLeft="35dp"
                android:layout_marginTop="290dp"
                android:background="@drawable/fill_button"
                android:gravity="center"
                android:text="LOGIN"
                android:textColor="#ffff"
                android:textSize="17sp"
                >
            </Button>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="610dp"
            android:text="create new account?"
            android:textColor="#090909"
            android:fontFamily="@font/segoeprb"
            android:textSize="17sp" />
    </RelativeLayout>
</LinearLayout>








































