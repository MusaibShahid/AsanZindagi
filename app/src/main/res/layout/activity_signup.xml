<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".signup">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFDFD">
        <androidx.cardview.widget.CardView
            android:layout_width="280dp"
            android:layout_height="520dp"
            android:layout_marginLeft="150dp"
            android:layout_marginRight="-15dp"
            android:layout_marginTop="110dp"
            app:cardBackgroundColor="#f6941e"
            app:cardCornerRadius="30dp">
            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="10dp"
                android:text="signup"
                android:fontFamily="@font/segoeprb"
                android:textColor="#FFFFFF"
                android:textColorHighlight="#FFFFFF"
                android:textSize="24sp"
                 />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_width="290dp"
            android:layout_height="420dp"
            android:id="@+id/pagesignup"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="180dp"
            app:cardBackgroundColor="#F5D8D4D4"
            app:cardCornerRadius="30dp">
            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="73dp"
                android:layout_height="61dp"
                android:layout_gravity="center|top"
                android:layout_marginTop="20dp"
                app:srcCompat="@drawable/user1" />
            <EditText
                android:id="@+id/user1"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="90dp"
                android:drawableLeft="@drawable/user1"
                android:drawablePadding="20dp"
                android:hint="username"
                android:inputType="textPersonName"
                android:padding="10dp"
                />
            <EditText
                android:id="@+id/SIGNUP_email"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="140dp"
                android:drawableLeft="@drawable/email1"
                android:drawablePadding="20dp"
                android:hint="email"
                android:inputType="textEmailAddress"
                android:padding="7dp"
                />
            <EditText
                android:id="@+id/contact"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="190dp"
                android:drawableLeft="@drawable/cal"
                android:drawablePadding="20dp"
                android:hint="contact"
                android:inputType="phone"
                android:digits="1234567890"
                android:padding="7dp"
                />
            <com.google.android.material.textfield.TextInputLayout
                app:passwordToggleEnabled="true"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="240dp"
                >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/SIGNUP_pass"
                android:drawablePadding="20dp"
                android:paddingLeft="50dp"
                android:textColorHint="#0B0A0A"
                android:ems="10"
                android:hint="password"
                android:maxLength="11"
                android:inputType="textPassword"/>
            </com.google.android.material.textfield.TextInputLayout>
            <Button
                android:id="@+id/btnsignup"
                android:layout_width="240dp"
                android:layout_height="49dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="340dp"
                android:background="@drawable/fill_button"
                android:gravity="center"
                android:text="SIGN UP "
                android:textColor="#ffff"
                android:textSize="17sp"
                >
            </Button>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>