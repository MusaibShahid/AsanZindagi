<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FavActivity">
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="100dp"
        android:id="@+id/animation"
        app:lottie_loop="true"
        app:lottie_fileName="signout.json"
        app:lottie_autoPlay="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:layout_below="@id/animation"
        android:gravity="center"
        android:textSize="17dp"
        android:layout_marginTop="20dp"
        android:text="Thank You For Visiting DL Search Applictaion,
I hope you Enjoying, If you want to Logout From the Appliction click below "
        ></TextView>

    <Button
        android:layout_width="270dp"
        android:layout_height="45dp"
        android:id="@+id/logout_btn"
        android:layout_below="@id/text1"
        android:layout_marginTop="140dp"
        android:text="Logout"
        android:textColor="#f6941e"
        android:background="@drawable/backgroud"
        android:gravity="center"
        android:layout_marginLeft="50dp"></Button>





</RelativeLayout>